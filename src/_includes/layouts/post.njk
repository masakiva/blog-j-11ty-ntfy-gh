---
layout: layouts/base.njk
---

<article class="un-article">
  <h1 class="le-titre">{{ title }}</h1>
  <p>
    <time class="quel-jour" datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
  </p>

  {{ content | safe }}

  {% if tags %}
    <p>
    {% for tag in tags %}
      {%- if tag != "articles" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

</article>

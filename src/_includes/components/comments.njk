{% if comments[page.url].length > 0 %}
  <h2>{{comments[page.url].length}} comments on this page</h2>
  <ul>
  {%- for comment in (comments[page.url] | reverse) -%}
    <li class="un-commentaire">
      <h3>{{ comment.name }}</h3>
      <time>{{ comment.date | dateDisplay }}</time>
      <div class="le-message">
        {{ comment.comment }}
      </div>
    </li>
  {%- endfor -%}
  </ul>
{% endif %}
